<script type="module">
function highlightHash() {
  addEventListener('hashchange', highlightHash)
  
  const $hash = location.hash && document.querySelector(location.hash)
  if (!$hash) return
  
  if ($hash instanceof HTMLDetailsElement) $hash.open = true
  
  $hash.tabIndex = 0
  $hash.focus()
  
  $hash.addEventListener('blur', e => {
    $hash.tabindex = -1
  }, { once: true })
}

highlightHash()

addEventListener('keyup', e => {
  if (e.shiftKey === true) {
    switch (e.keyCode) {
      case 69: // E
        window.location = 'https://github.com/DenizAksimsek/www/edit/master/{{page.inputPath}}'
        break
    }
  }
})
</script>


