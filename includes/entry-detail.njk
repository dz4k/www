
{%- if e -%}
{% set page = e %}
{% set title = d.title %}
{% set likeOf = d.likeOf %}
{% set repostOf = d.repostOf %}
{% set bookmarkOf = d.bookmarkOf %}
{% set replyTo = d.replyTo %}
{%- endif -%}

	<p class="entry-detail">

		<span hidden class="p-author h-card">
			<a class="u-url p-name"
				href="https://denizaksimsek.com">Deniz Akşimşek</a>
			<a class="u-photo" href="/assets/me.jpeg"></a>
		</span>
		{%- set foo='just removing whitespace' -%}
	
		<a href="{{ page.url }}" class="u-url nolink"
			><time class="dt-published" datetime="{{ page.date | isodatetime }}"
				>{{ page.date | datefmt('yyyy/MM/dd hh:mm') }}</time></a>

		{%- if repostOf %}
			| Repost <span class=noital>🔁</span>
				<a class=u-repost-of 
					href="{{ repostOf.url | d(repostOf) }}"
					>{{ repostOf.name | d(repostOf | truncateUrl) }}</a>

		{%- elif likeOf %}
			| Like <span class=noital>❤️</span>
				<a class=u-like-of 
					href="{{ likeOf.url | d(likeOf) }}"
					>{{ likeOf.name | d(likeOf.url | truncateUrl) }}</a>

		{%- elif bookmarkOf %}
			| Bookmark <span class=noital>🔖</span>
				<a class=u-bookmark-of 
					href="{{ bookmarkOf.url | d(bookmarkOf) }}"
					>{{ bookmarkOf.name | d(bookmarkOf | truncateUrl) }}</a>
		{%- endif -%}

		{%- if replyTo and (hideReplyContext or not replyTo.context) %}
			| Re. <span class=noital>↪</span>
				<a class=u-reply-to 
					href="{{ replyTo.url | d(replyTo) }}"
					>{{ replyTo.name 
						| d(replyTo | truncateUrl) }}</a>
		{%- endif -%}

	</p>
