	<p class="entry-detail">

		<span hidden class="p-author h-card">
			<a class="u-url p-name"
				href="https://denizaksimsek.com">Deniz Akşimşek</a>
			<a class="u-photo" href="/assets/me.jpeg"></a>
		</span>
		{%- set foo='just removing whitespace' -%}
	
		<a href="{{ e.url }}" class="u-url nolink"
			><time class="dt-published" datetime="{{ e.date | isodatetime }}"
				>{{ e.date | datefmt('yyyy/MM/dd hh:mm') }}</time></a>

		{%- if d.likeOf %}
			| Like <span class=noital>❤️</span>
				<a class=u-like-of 
					href="{{ d.likeOf.url | d(likeOf) }}"
					>{{ d.likeOf.name | d(d.likeOf.url | truncateUrl) }}</a>
		{%- endif -%}

		{%- if d.repostOf %}
			| Repost <span class=noital>🔁</span>
				<a class=u-repost-of 
					href="{{ d.repostOf.url | d(d.repostOf) }}"
					>{{ d.repostOf.name | d(d.repostOf | truncateUrl) }}</a>
		{%- endif -%}

		{%- if d.bookmarkOf %}
			| Bookmark <span class=noital>🔖</span>
				<a class=u-bookmark-of 
					href="{{ d.bookmarkOf.url | d(d.bookmarkOf) }}"
					>{{ d.bookmarkOf.name | d(d.bookmarkOf | truncateUrl) }}</a>
		{%- endif -%}

		{%- if d.replyTo and (hideReplyContext or not d.replyTo.context) %}
			| Re. <span class=noital>↪</span>
				<a class=u-reply-to 
					href="{{ d.replyTo.url | d(d.replyTo) }}"
					>{{ d.replyTo.name 
						| d(d.replyTo.url | d(d.replyTo) | truncateUrl) }}</a>
		{%- endif -%}

	</p>
