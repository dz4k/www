
<ol class="entry-list" reversed>
{%- for entry in collections.posts | reverse %}
	{% set e = entry %}
	{% set d = e.data %}
	<li>
		<article class="h-entry">
			{% include "partials/entry-detail.njk" %}
			{% if d.title %}
				<a href="{{ e.url }}"><h1 class="p-name">{{ d.title }}</h1></a>
				{% if d.uPhoto %}
					<img class="u-photo" src="{{ d.uPhoto }}" alt="">
			{% else %}
				{% include "partials/entry-detail.njk" %}
				<div class="e-content">
					{{ e.templateContent | safe }}
				</div>
			{% endif %}
		</article>
{%- endfor %}
</ol>
