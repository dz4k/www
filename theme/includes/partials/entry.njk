
{% set e = entry %}
{% set d = e.data %}

<article class=h-entry>
	<header class=entry-header>
		
		{% if u-photo %}
			<link class=u-photo href="{{ d.uPhoto }}">
		{% endif %}

		{% if d.title %}
			<h1 class="p-name">{{ d.title }}</h1>
		{% endif %}

		{% if d.likeOf %}
			<p>Like ‚ù§Ô∏è
				<a class=u-like-of 
					href="{{ d.likeOf.url | d(likeOf) }}"
					>{{ d.likeOf.name | d(d.likeOf) }}</a></p>
		{% endif %}

		{% if d.repostOf %}
			<p>Repost üîÅ
				<a class=u-repost-of 
					href="{{ d.repostOf.url | d(d.repostOf) }}"
					>{{ d.repostOf.name | d(d.repostOf) }}</a></p>
		{% endif %}

		{% if d.replyTo and not d.replyTo.context %}
			<p>Re. ‚Ü™
				<a class=u-reply-to 
					href="{{ d.replyTo.url | d(d.replyTo) }}"
					>{{ d.replyTo.name | d(d.replyTo) }}</a></p>
		{% endif %}

		<p><a href="{{ e.url }}" class="u-url">
			<time class="dt-published" datetime="{{ e.date | isodatetime }}"
				>{{ e.date | datefmt('yyyy/MM/dd hh:mm') }}</time>
		</a></p>

		<p><a class="p-author h-card" href="/">Deniz Ak≈üim≈üek</a></p>

		{% if d.english %}
			<p><a rel=alternate href="{{ d.english }}" hreflang=en>English</a>
			</p>
		{% endif %}

		{% if d.t√ºrk√ße %}
			<p><a rel=alternate href="{{ d.t√ºrk√ße }}" hreflang=tr>T√ºrk√ße</a></p>
		{% endif %}

		{% if d.syndication %}
			<p>also on {% for key, val in syndication %}
				<a href="{{ val }}">{{ key }}</a>{{ ' | ' if not loop.last }}
			{% endfor %}</p>
		{% endif %}

	</header>

	{% if d.replyTo and d.replyTo.context %}
		<div class=replycontext>
			<p>‚Ü™ Reply to <cite><a class=u-reply-to href="{{ d.replyTo.url }}"
				>{{ d.replyTo.name | d(d.replyTo.url) }}</a></cite>:</p>
			<blockquote>{{ d.replyTo.context | markdown | safe }}</blockquote>
		</div>
	{% endif %}

	<div class=e-content>{{ content | d(e.templateContent) | safe }}</div>

	{% include "partials/webmentions.njk" %}

</article>
