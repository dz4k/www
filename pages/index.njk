<section class="blog">
	<h2>blog</h2>

	<ul role=list>
	    {% for entry in (collections.longform | reverse).slice(0, 3) %}
	        <li><a href="{{ entry.url }}">{{ entry.data.title }}
	            <time datetime="{{ entry.date | isodatetime }}">{{ entry.date | isodate }}</time></a>
	    {% endfor %}
	</ul>
	
	<a href="/archive">all posts</a>
</section>

<section class="blog">
	<h2>bookmarks</h2>

	<ul role=list>
	    {% for bm in (collections.bookmark | reverse).slice(0, 3) %}
			<li>
				<a href="{{ bm.data.bookmarkOf.url }}">{{ bm.data.bookmarkOf.name }}
					<time datetime="{{ bm.date | isodatetime }}">{{ bm.date | isodate }}</time></a>
				{% if bm.templateContent.trim() != '' %}
					<a href="{{ bm.url }}">notes</a>
				{% endif %}
	    {% endfor %}
	</ul>

